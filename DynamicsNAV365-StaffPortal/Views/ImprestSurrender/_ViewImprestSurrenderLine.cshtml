@model DynamicsNAV365_StaffPortal.Models.Finance.ImprestSurrender.ImprestSurrenderLineModel

<div class="row">
	<div class="col-md-12">
		<div id="AjaxLoader" class="">
			Loading Imprest Surrender Lines
			<img src="~/Content/images/ajax-loader.gif" alt="Loading Imprest Surrender Lines..." style="width:15px;height:15px;" />
		</div>
		<div id="TableContainer" class="table-responsive">
			<table id="ImprestSurrenderLineTbl" class="table table-striped table-bordered" style="display:none;">
				<thead class="text-primary">
                    <tr>
                        @*<th>Imprest Code</th>*@
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Amount Spent</th>
                        <th>Receipt No.</th>
                        <th>Receipt Amount</th>
                        <th>Region</th>
                        <th>Program</th>
                        <th>Geography</th>
                        <th>Component</th>
                        <th>Intervention</th>
                        <th>Program Area</th>
                        <th>Beneficiary</th>
                        <th>Action</th>
                    </tr>
				</thead>
				<tbody></tbody>
			</table>
		</div>
		<div id="ImprestSurrenderLineModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="ImprestSurrenderLineModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button class="btn close" type="button" data-dismiss="modal"><i class="fa fa-close"></i></button>
						<h4 id="ImprestSurrenderLineModalLabel" class="modal-title" style="text-align:center">Imprest Surrender Line</h4>
					</div>
					<div class="modal-body">
						@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "ImprestSurrenderLineForm", @class = "" }))
						{
							@Html.AntiForgeryToken()

							if (Model != null && Model.LineErrorStatus == true)
							{
								<div class="alert alert-danger">
									<strong>Error! </strong>@Html.Raw(HttpUtility.HtmlDecode(Model.LineErrorMessage))
								</div>
							}
							@Html.HiddenFor(model => model.LineNo)
							@Html.HiddenFor(model => model.DocumentNo)

							<div class="row">
								<div class="col-md-12">
									<div class="form-group label-floating">
										@Html.LabelFor(model => model.ReceiptNo, htmlAttributes: new { @id = "ReceiptNoLbl", @class = "control-label" })
										@Html.DropDownListFor(model => model.ReceiptNo, Model.ReceiptNos, "", new { @class = "form-control",@disabled="disabled" })
										@Html.ValidationMessageFor(model => model.ReceiptNo, "", new { @id = "ReceiptNoError", @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<div class="form-group label-floating">
										@Html.LabelFor(model => model.LineSurrenderDescription, htmlAttributes: new { @id = "LineSurrenderDescriptionLbl", @class = "control-label" })
										@Html.EditorFor(model => model.LineSurrenderDescription, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
										@Html.ValidationMessageFor(model => model.LineSurrenderDescription, "", new { @id = "LineSurrenderDescriptionError", @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<div class="form-group label-floating">
										@Html.LabelFor(model => model.LineActualAmount, htmlAttributes: new { @id = "LineActualAmountLbl", @class = "control-label" })
										@Html.EditorFor(model => model.LineActualAmount, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
										@Html.ValidationMessageFor(model => model.LineActualAmount, "", new { @id = "LineActualAmountError", @class = "text-danger" })
									</div>
								</div>
							</div>
						}
					</div>
					<div class="modal-footer">
						<button id="CreateImprestSurrenderLineBtn" class="btn btn-primary btn-xs" type="button" onclick="ViewImprestSurrenderLine();"><i class="fa fa-plus"></i>View</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section scripts{

}






