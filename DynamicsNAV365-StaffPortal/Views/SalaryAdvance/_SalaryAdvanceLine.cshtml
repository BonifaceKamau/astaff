@model DynamicsNAV365_StaffPortal.Models.HumanResource.SalaryAdvanceModels.SalaryAdvanceLineModel

<div class="row">
    <div class="col-md-12">
        <button class="btn btn-primary btn-xs" type="button" data-toggle="modal" data-target="#SalaryAdvanceLineModal" onclick="ClearSalaryAdvanceLineModal();">
            <i class="fa fa-plus"></i>
            Add Salary Advance Line
        </button><br />
        <div id="TableContainer" class="table-responsive">
            <table id="SalaryAdvanceLineTbl" class="table table-striped table-bordered" style="display:none;">
                <thead class="text-primary">
                    <tr>
                        <th>Amount</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="SalaryAdvanceLineModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="SalaryAdvanceLineModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="btn close" type="button" data-dismiss="modal"><i class="fa fa-close"></i></button>
                        <h4 id="SalaryAdvanceLineModalLabel" class="modal-title">Salary Advance Line</h4>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "SalaryAdvanceLineForm", @class = "" }))
                        {
                            @Html.AntiForgeryToken()

                            if (Model != null && Model.LineErrorStatus == true)
                            {
                                <div class="alert alert-danger">
                                    <strong>Error! </strong>@Html.Raw(HttpUtility.HtmlDecode(Model.LineErrorMessage))
                                </div>
                            }
                            @Html.HiddenFor(model => model.LineNo)
                            @Html.HiddenFor(model => model.DocumentNo)

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.LineAmount, htmlAttributes: new { @id = "LineAmountLbl", @class = "control-label" })
                                        @Html.EditorFor(model => model.LineAmount, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.LineAmount, "", new { @id = "LineAmountError", @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button id="CreateSalaryAdvanceLineBtn" class="btn btn-xs btn-primary" type="button" onclick="CreateSalaryAdvanceLine();"><i class="fa fa-plus"></i>Add Line</button>
                        <button id="ModifySalaryAdvanceLineBtn" class="btn btn-xs btn-primary" type="button" onclick="ModifySalaryAdvanceLine();"><i class="fa fa-adjust"></i>Update Line</button>
                        <button class="btn btn-xs btn-danger" type="button" data-dismiss="modal"><i class="fa fa-close"></i>Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


