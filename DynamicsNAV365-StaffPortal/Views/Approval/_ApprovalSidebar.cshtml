@model DynamicsNAV365_StaffPortal.Models.Account.EmployeeProfileModel
<aside class="left-side sidebar-offcanvas">
	<section class="sidebar">
        <a href="@Url.Action("EmployeeProfile", "Account")">
            <div class="user-panel">
                <div class="pull-left image">
                    @if (Model != null && Model.PassportAttached == true)
                    {
                        <img src="~/EmployeeData/@Model.EmployeePassportPath" class="img-circle" alt="User Image" style="width: 103.5%;" />
                    }
                    else
                    {
                        <img src="~/Content/images/photo_placeholder.png" class="img-circle" alt="User Image" style="width: 103.5%;" />
                    }
                </div>
                <div class="pull-left info">
                    <p>@HttpContext.Current.User.Identity.Name</p>
                    <div class="online-status" style="font-size: 10px;">
                        <span class="fa fa-circle text-success" style="vertical-align: middle;"></span>
                        <span class="status-text" style="vertical-align: middle;">Online</span>
                    </div>
                </div>
            </div>
        </a>
        <ul class="sidebar-menu">
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                </a>
            </li>
            <li id="OpenEntries">
                <a href="@Url.Action("OpenEntries", "Approval")">
                    <i class="fa fa-circle-o"></i> <span>Requests To Approve</span>
                </a>
            </li>
            <li id="RejectedEntries">
                <a href="@Url.Action("RejectedEntries", "Approval")">
                    <i class="fa fa-window-close-o"></i> <span>Rejected Requests</span>
                </a>
            </li>
            <li id="ApprovedEntries">
                <a href="@Url.Action("ApprovedEntries", "Approval")">
                    <i class="fa fa-check-square-o"></i> <span>Approved Requests</span>
                </a>
            </li>
        </ul>
	</section>
</aside>





