@model DynamicsNAV365_StaffPortal.Models.EmployeeAppraisal.EmployeeAppraisalLineModel

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div id="AjaxLoader" class="">
                    Loading.....
                    <img src="~/Content/images/ajax-loader.gif" alt="Loading...." style="width:15px;height:15px;" />
                </div>
                <div id="TableContainer" class="table-responsive">
                    <table id="EmployeeAppraisalLineTbl" class="table table-striped table-bordered" style="display:none;">
                        <thead class="text-primary">
                            <tr>
                                <th>Appraisal Period</th>
                                <th>Appraisal Objective</th>
                                <th>Organization Activity</th>
                                <th>Departmental Activity</th>
                                <th>Individual Activity</th>
                                <th>Organization Weight</th>
                                <th>Activity Weight</th>
                                <th>Target Value</th>
                                <th>Appraisal-Score Type</th>
                                <th>Parameter Type</th>
                                <th>BUM</th>
                                <th>.</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div id="EmployeeAppraisalLineModal" class="modal fade" role="dialog" aria-labelledby="EmployeeAppraisalLineModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button class="btn close" type="button" data-dismiss="modal"><i class="fa fa-close"></i></button>
                                <h4 id="EmployeeAppraisalLineModalLabel" class="modal-title" style="text-align:center">View Employee Appraisal Line</h4>
                            </div>
                            <div class="modal-body">
                                @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "EmployeeAppraisalLineForm", @class = "" }))
                                {
                                    @Html.AntiForgeryToken()

                                    if (Model != null && Model.LineErrorStatus == true)
                                    {
                                        <div class="alert alert-danger">
                                            <strong>Error! </strong>@Html.Raw(HttpUtility.HtmlDecode(Model.LineErrorMessage))
                                        </div>
                                    }
                                    @Html.HiddenFor(model => model.DocumentNo)

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group label-static">
                                                @Html.LabelFor(model => model.AppraisalPeriod, htmlAttributes: new { @id = "AppraisalPeriodLbl", @class = "control-label" })
                                                @Html.DropDownListFor(model => model.AppraisalPeriod, Model.AppraisalPeriods, "", new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.AppraisalPeriod, "", new { @id = "AppraisalPeriodError", @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group label-static">
                                                @Html.LabelFor(model => model.AppraisalObjective, htmlAttributes: new { @id = "AppraisalObjectiveLbl", @class = "control-label" })
                                                @Html.DropDownListFor(model => model.AppraisalObjective, Model.AppraisalObjectives, "", new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.AppraisalObjective, "", new { @id = "AppraisalObjectiveError", @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group label-static">
                                                @Html.LabelFor(model => model.OrganizationActivityCode, htmlAttributes: new { @id = "OrganizationActivityCodeLbl", @class = "control-label" })
                                                @Html.DropDownListFor(model => model.OrganizationActivityCode, Model.OrganizationActivityCodes, "", new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.OrganizationActivityCode, "", new { @id = "OrganizationActivityCodeError", @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group label-static">
                                                @Html.LabelFor(model => model.DepartmentActivityCode, htmlAttributes: new { @id = "DepartmentActivityCodeLbl", @class = "control-label" })
                                                @Html.DropDownListFor(model => model.DepartmentActivityCode, Model.DepartmentActivityCodes, "", new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.DepartmentActivityCode, "", new { @id = "DepartmentActivityCodeError", @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group label-static">
                                                @Html.LabelFor(model => model.ActivityDescription, htmlAttributes: new { @id = "ActivityDescriptionLbl", @class = "control-label" })
                                                @Html.EditorFor(model => model.ActivityDescription, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                                @Html.ValidationMessageFor(model => model.ActivityDescription, "", new { @id = "ActivityDescriptionError", @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group label-static">
                                                @Html.LabelFor(model => model.ObjectiveWeight, htmlAttributes: new { @id = "ObjectiveWeightLbl", @class = "control-label" })
                                                @Html.EditorFor(model => model.ObjectiveWeight, new { htmlAttributes = new { @class = "form-control" }, @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.ObjectiveWeight, "", new { @id = "ObjectiveWeightError", @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group label-static">
                                                @Html.LabelFor(model => model.ActivityWeight, htmlAttributes: new { @id = "ActivityWeightLbl", @class = "control-label" })
                                                @Html.EditorFor(model => model.ActivityWeight, new { htmlAttributes = new { @class = "form-control" }, @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.ActivityWeight, "", new { @id = "ActivityWeightError", @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group label-static">
                                                @Html.LabelFor(model => model.BUM, htmlAttributes: new { @id = "BUMLbl", @class = "control-label" })
                                                @Html.DropDownListFor(model => model.BUM, Model.BUMs, "", new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.BUM, "", new { @id = "BUMError", @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-danger btn-xs" type="button" data-dismiss="modal"><i class="fa fa-close"></i>Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

