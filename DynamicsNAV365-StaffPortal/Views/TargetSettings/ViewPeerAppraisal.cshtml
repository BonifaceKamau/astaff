@model DynamicsNAV365_StaffPortal.Models.HumanResource.PeerAppraisal


@{
    ViewBag.title = "Peer Apparaisal Select Header";
    
    var isReadonly= Model.Status != "Open";
}

<div class="wrapper row-offcanvas row-offcanvas-left">
    @{ Html.RenderAction("_PerformanceSidebar", "TargetSettings"); }
    <aside class="right-side">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        @using (Html.BeginForm("ViewPeerAppraisal", "TargetSettings", FormMethod.Post, new { @class = "" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="card-header" data-background-color="company_card">
                                <div class="row">
                                    <div class="col-md-2">
                                        <h4 class="title">
                                            <i>Edit/View Peer Apparaisal Selection</i>
                                        </h4>
                                    </div>
                                    <p>Status: <span>@Model.Status</span></p>
                                    @if (!isReadonly)
                                    {
                                        <div class="col-md-2">
                                            <a class="btn btn-danger btn-xs pull-right" href="@Url.Action("PeerAppraisalSendToReview", new {no = Model.No})">
                                                <i class="fa fa-send"></i>
                                                Send To review
                                            </a>
                                        </div>
                                    }
                                    <div class="col-md-2">
                                        <a class="btn btn-danger btn-xs pull-right" href="@Url.Action("PeerAppraisals")">
                                            <i class="fa fa-close"></i>
                                            Close
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                @if (Model != null && Model.ErrorStatus == true)
                                {
                                    <div class="alert alert-danger">
                                        <strong>Error! </strong>@Html.Raw(HttpUtility.HtmlDecode(Model.errorMessage))
                                    </div>
                                }
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group label-floating">
                                                    @Html.LabelFor(model => model.No, htmlAttributes: new { @id = "NoLbl", @class = "control-label" })
                                                    @Html.EditorFor(model => model.No, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                                    @Html.ValidationMessageFor(model => model.No, "", new { @id = "NoError", @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group label-floating">
                                                    @Html.LabelFor(model => model.Staff_No, htmlAttributes: new { @id = "EmployeeNoLbl", @class = "control-label" })
                                                    @Html.EditorFor(model => model.Staff_No, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                                    @Html.ValidationMessageFor(model => model.Staff_No, "", new { @id = "EmployeeNoError", @class = "text-danger" })
                                                </div>
                                            </div>
                                            @Html.HiddenFor(model => model.Staff_No)
                                            <div class="col-md-6">
                                                <div class="form-group label-floating">
                                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @id = "EmployeeNameLbl", @class = "control-label" })
                                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control"} })
                                                    @Html.ValidationMessageFor(model => model.Description, "", new { @id = "EmployeeNameError", @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group label-static">
                                                    @Html.LabelFor(model => model.Period, htmlAttributes: new { @id = "GlobalDimension2CodeLbl", @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.Period, Model?.PeriodSelect, "", new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Period, "", new { @id = "GlobalDimension2CodeError", @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        @Html.HiddenFor(model => model.No)
                                        @Html.HiddenFor(model => model.Supervisor)
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group label-static">
                                                    @Html.LabelFor(model => model.Peer_Appraiser_1, htmlAttributes: new { @id = "GlobalDimension2CodeLbl", @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.Peer_Appraiser_1, Model?.Peer_Appraiser_1Select, "", new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Peer_Appraiser_1, "", new { @id = "GlobalDimension2CodeError", @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group label-static">
                                                    @Html.LabelFor(model => model.Peer_Appraiser_2, htmlAttributes: new { @id = "GlobalDimension2CodeLbl", @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.Peer_Appraiser_2, Model?.Peer_Appraiser_2Select, "", new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Peer_Appraiser_2, "", new { @id = "GlobalDimension2CodeError", @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group label-static">
                                                    @Html.LabelFor(model => model.Peer_Appraiser_3, htmlAttributes: new { @id = "GlobalDimension2CodeLbl", @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.Peer_Appraiser_3, Model?.Peer_Appraiser_3Select, "", new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Peer_Appraiser_3, "", new { @id = "GlobalDimension2CodeError", @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        @*<div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group label-static">
                                                    @Html.LabelFor(model => model.Directorate, htmlAttributes: new { @id = "AmountLbl", @class = "control-label" })
                                                    @Html.EditorFor(model => model.Directorate, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Directorate, "", new { @id = "AmountError", @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>*@
                                        @if (!isReadonly)
                                        {
                                            <div class="col-md-12">
                                                <input type="submit" class="btn btn-success btn-xs pull-right ladda-button" value="Save Header"/>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        @*<div class="card-footer">
                            <div class="row">
                                <div class="col-md-12">
                                    <!--Render imprest line partial view-->
                                    @{ Html.RenderAction("_TargetSettingLine", new { no = Model?.Number, period = Model.Period }); }
                                </div>
                            </div>
                            <hr/>
                        </div>*@
                    </div>
                </div>
            </div>
        </section>
    </aside>
</div>
<div id="ApplicationDocumentModal" class="modal fade" role="dialog" aria-labelledby="ApplicationDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="btn close" type="button" data-dismiss="modal">
                    <i class="fa fa-close"></i>
                </button>
                <h4 id="ApplicationDocumentModalLabel" class="modal-title" style="text-align:center">Upload Document</h4>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "ApplicationDocumentForm", @class = "" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-12">
                            <div id="errorMessage" class="alert alert-info" role="alert">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input id="ImprestDocumentFile" style="width:560px;border:2px solid dashed;background-color:lightblue" type="file" name="files">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

