@model DynamicsNAV365_StaffPortal.Models.PerformanceManagement.SupervisorAppraisalsModel

@{
    ViewBag.Title = "Final Appraisal By Supervisor";
}
<div class="wrapper row-offcanvas row-offcanvas-left">
    <!--Render Human Resource Sidebar-->
    @{Html.RenderAction("_PerformanceManagementSidebar", "PerformanceHome");}
    <aside class="right-side">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        @using (Html.BeginForm("FinalAppraisal", "SupervisorAppraisals", FormMethod.Post, new { @class = "" }))
                        {
                            @Html.AntiForgeryToken()
                            @*@Html.HiddenFor(model => model.ProjectNo)*@
                            <div class="card-header" data-background-color="company_card">
                                <div class="row">
                                    <div class="col-md-1">
                                    </div>
                                    <div class="col-md-3">
                                        <h4 class="title">Final Appraisal - End Year</h4>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="submit" id="submitBtn" name="Command" value="Appraise Now" class="btn btn-white btn-xs pull-right ladda-button" data-style="slide-right" data-background-color="green" />
                                    </div>
                                    <div class="col-md-4">
                                       
                                        @if (ViewBag.Success != null)
                                        {
                                            <a class="btn btn-sm" id="successalert" style="background-color:#d4edda; color:#155724; text-transform:lowercase;">
                                                @ViewBag.Success
                                            </a>

                                        }                                       
                                        @if (ViewBag.Failed != null)
                                        {
                                            <a class="btn btn-sm" id="successalert" style="background-color:#f8d7da; color:#721c24; text-transform:lowercase;">
                                                @ViewBag.Failed
                                            </a>

                                        }

                                    </div>
                                    <div class="col-md-2">
                                        @{
                                            string backUrl = "";
                                            backUrl = Url.Action("SupervisorAppraisalEnd", "SupervisorAppraisals");
                                        }
                                        <a class="btn btn-danger btn-xs pull-right" href="@backUrl">
                                            <i class="fa fa-close"></i>
                                            Close
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row">                                    
                                    <div class="col-lg-12">
                                        @if (ViewBag.Error != null)
                                        {
                                            <a class="btn btn-sm" id="successalert" style="background-color:#f8d7da; color:#721c24; text-transform:lowercase;">
                                                @ViewBag.Error
                                            </a>

                                        }                                       
                                        </div>
                                    @Html.HiddenFor(model => model.AppraisalNo)
                                    <div class="col-md-12">
                                        <div class="form-group">                                           
                                            @Html.LabelFor(model => model.EmployeeName, htmlAttributes: new { @id = "EmployeeNameLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.EmployeeName, "", new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                            @Html.ValidationMessageFor(model => model.EmployeeName, "", new { @id = "EmployeeNameError", @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Designation, htmlAttributes: new { @id = "DesignationLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.Designation, "", new { htmlAttributes =new { @class = "form-control", @readonly = true } })
                                            @Html.ValidationMessageFor(model => model.Designation, "", new { @id = "DesignationError", @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AppraisalPeriod, htmlAttributes: new { @id = "AppraisalPeriodLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.AppraisalPeriod, "", new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                            @Html.ValidationMessageFor(model => model.AppraisalPeriod, "", new { @id = "AppraisalPeriodError", @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>

                            </div>
                                            }

                    </div>
                </div>
            </div>
        </section>
    </aside>

</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
window.setTimeout(function() {
    $("#successalert").fadeTo(300, 0).slideUp(300, function(){
        $(this).remove();
    });
}, 7000);

})

</script>