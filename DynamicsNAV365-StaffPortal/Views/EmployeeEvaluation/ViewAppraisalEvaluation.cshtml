@model DynamicsNAV365_StaffPortal.Models.EmployeeAppraisal.AppraisalEvaluationHeaderModel

@{
	ViewBag.Title = "View Appraisal Evaluation";
}
<div class="wrapper row-offcanvas row-offcanvas-left">
	<!--Render procurement sidebar-->
	@{Html.RenderAction("_HumanResourceSidebar", "HumanResourceHome");}
	<aside class="right-side">
		<section class="content">
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						@using (Html.BeginForm("ViewAppraisalEvaluation", "EmployeeEvaluation", FormMethod.Post, new { @class = "" }))
						{
							@Html.AntiForgeryToken()
							<div class="card-header" data-background-color="company_card">
								<div class="row">
									<div class="col-md-4">
										<h4 class="title"><i>View Appraisal Evaluation</i></h4>
									</div>
									<div class="col-md-8">
										<a class="btn btn-xs pull-right" style="background-color:red" href="@Url.Action("AppraisalEvaluationHistory", "EmployeeEvaluation")">
											<i class="fa fa-close"></i>
											Close
										</a>
									</div>
								</div>
							</div>
							<div class="card-content">
								@if (Model != null && Model.ErrorStatus == true)
								{
									<div class="alert alert-danger">
										<strong>Error! </strong>@Html.Raw(HttpUtility.HtmlDecode(Model.ErrorMessage))
									</div>
								}

								@Html.HiddenFor(model => model.EmployeeNo)
								<div class="row">
									<div class="col-md-7">
										<ul class="nav nav-tabs">
											<li class="active"><a href="#">General Details</a></li>
										</ul>
										<br />
										<div class="row">
											<div class="col-md-6">
												<div class="form-group label-floating">
													@Html.LabelFor(model => model.No, htmlAttributes: new { @id = "NoLbl", @class = "control-label" })
													@Html.EditorFor(model => model.No, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
													@Html.ValidationMessageFor(model => model.No, "", new { @id = "NoError", @class = "text-danger" })
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group label-floating">
													@Html.LabelFor(model => model.ApprovedAppraisal, htmlAttributes: new { @id = "ApprovedAppraisalLbl", @class = "control-label" })
													@Html.DropDownListFor(model => model.ApprovedAppraisal, Model.AppraisalNos, "", new { @class = "form-control", @disabled = "disabled" })
													@Html.ValidationMessageFor(model => model.ApprovedAppraisal, "", new { @id = "ApprovedAppraisalError", @class = "text-danger" })
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-12">
												<div class="form-group label-floating">
													@Html.LabelFor(model => model.EvaluationStage, htmlAttributes: new { @id = "EvaluationStageLbl", @class = "control-label" })
													@Html.DropDownListFor(model => model.EvaluationStage, Model.EvaluationStages, "", new { @class = "form-control", @disabled = "disabled" })
													@Html.ValidationMessageFor(model => model.EvaluationStage, "", new { @id = "EvaluationStageError", @class = "text-danger" })
												</div>
											</div>
										</div>
									</div>
									<div class="col-md-5">
										<ul class="nav nav-tabs">
											<li class="active"><a href="#">Supporting Document Attached</a></li>
										</ul>
										<br />
										<div class="col-md-12">
											@{Html.RenderAction("_ViewAppraisalEvaluationDocument", "EmployeeEvaluation", new { DocumentNo = Model.No });}
										</div>
									</div>
								</div>
							</div>
												}
						<div class="card-footer">
							<div class="row">
								<div class="col-md-12">
									<!--Render appraisal evaluation line partial view-->
									@{Html.RenderAction("_ViewAppraisalEvaluationLine", "EmployeeEvaluation", new { DocumentNo = Model.No });}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</aside>
</div>
@section scripts{
	<script src="~/Scripts/HumanResource/AppraisalEvaluationScripts/AppraisalEvaluationScript.js"></script>
	<script type="text/javascript">
        $(document).ready(function () {

        	//Add CSS Classes
        	$("#AppraisalEvaluationMenuItem").addClass("active");

        	//Initialize Appraisal Evaluation Scripts
        	InitializeAppraisalEvaluationScripts();

        	var DocumentNo = $("#No").val();
        	LoadAppraisalEvaluationLinesView(DocumentNo);
        	LoadAppraisalEvaluationDocumentsView(DocumentNo);
        });
	</script>
}