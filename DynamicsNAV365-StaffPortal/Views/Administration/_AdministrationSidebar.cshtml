@model DynamicsNAV365_StaffPortal.Models.Account.EmployeeProfileModel
@{
    //ViewBag.Title = "Dashboard";
    var _dcodataServices = new BCODATAServices("");
    var portalModulesEnumerable = _dcodataServices.BCOData.PortalModules.Execute().ToList();
}
<aside class="left-side sidebar-offcanvas">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <a href="@Url.Action("EmployeeProfile", "Account")">
            <div class="user-panel">
                <div class="pull-left image">
                    @if (Model != null && Model.PassportAttached == true)
                    {
                        <img src="~/EmployeeData/@Model.EmployeePassportPath" class="img-circle" alt="User Image" style="width: 103.5%;" />
                    }
                    else
                    {
                        <img src="~/Content/images/photo_placeholder.png" class="img-circle" alt="User Image" style="width: 103.5%;" />
                    }
                </div>
                <div class="pull-left info">
                    <p>@HttpContext.Current.User.Identity.Name</p>
                    <div class="online-status" style="font-size: 10px;">
                        <span class="fa fa-circle text-success" style="vertical-align: middle;"></span>
                        <span class="status-text" style="vertical-align: middle;">Online</span>
                    </div>
                </div>
            </div>
        </a>
        <ul class="sidebar-menu">
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                </a>
            </li>
            <li id="StoreRequisitionHistoryMenuItem">
                <a href="@Url.Action("StoreRequisitionHistory", "StoreRequisition")">
                    <i class="fa fa-address-book"></i> <span> Store Requisition</span>
                </a>
            </li>
            @if (portalModulesEnumerable.Any(c => c.Name == "FleetMgt Module" && c.Enabled == true))
            {
                <li id="Indexfltmng">
                    <a href="@Url.Action("Index", "FleetMgt")">
                        <i class="fa fa-car"></i> <span> Fleet Logs</span>
                    </a>
                </li>
            }
            @if (portalModulesEnumerable.Any(c => c.Name == "FleetLogreports Module" && c.Enabled == true))
            {
                <li id="FleetLogreports">
                    <a href="@Url.Action("FleetLogreports", "FleetMgt")">
                        <i class="fa fa-car"></i> <span> Fleet Log reports</span>
                    </a>
                </li>
            }
            @if (portalModulesEnumerable.Any(c => c.Name == "MaintainanceAndRepair Module" && c.Enabled == true))
            {
                <li id="MaintainanceAndRepair">
                    <a href="@Url.Action("MaintainanceAndRepair", "FleetMgt")">
                        <i class="fa fa-car"></i> <span> Maintainance and Repair</span>
                    </a>
                </li>
            }
            @if (portalModulesEnumerable.Any(c => c.Name == "FixedAssetPool Module" && c.Enabled == true))
            {
                <li id="FixedAssetPool">
                    <a href="@Url.Action("FixedAssetPool")">
                        <i class="fa fa-bitbucket"></i> <span> Fixed Asset Pool</span>
                    </a>
                </li>
            }
            @if (portalModulesEnumerable.Any(c => c.Name == "AssetTransferIssued Module" && c.Enabled == true))
            {
                <li id="AssetTransferIssued">
                    <a href="@Url.Action("AssetTransferIssued", "Administration")">
                        <i class="fa fa-address-book"></i> <span> Asset Transfer List- Issued</span>
                    </a>
                </li>
            }
            @if (portalModulesEnumerable.Any(c => c.Name == "AssetTransferReceived Module" && c.Enabled == true))
            {
                <li id="AssetTransferReceived">
                    <a href="@Url.Action("AssetTransferReceived", "Administration")">
                        <i class="fa fa-bank"></i> <span> Asset Transfer List-Received</span>
                    </a>
                </li>
            }
            </ul>
    </section>
</aside>