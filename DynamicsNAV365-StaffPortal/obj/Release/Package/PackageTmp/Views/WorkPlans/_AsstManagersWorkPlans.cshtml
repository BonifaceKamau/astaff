            url: "/WorkPlans/ModifyAsstManagerWorkPlanLine",
            type: "POST",
            data: frmData,
            dataType: 'json',
            contentType: false,
            processData: false,
            enctype: "multipart/form-data",
            async: true,
            cache: false,
            success: function (result) {
                $('#txtMessage').html(result.message);
