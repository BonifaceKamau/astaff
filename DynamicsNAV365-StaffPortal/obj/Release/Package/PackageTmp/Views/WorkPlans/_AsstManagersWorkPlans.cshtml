//Load Asst Managers WorkPlan Lines
    function LoadAsstManagersWorkplanLines() {
    var Department = $("#DepartmentItem").val();
	$.ajax({
		url: "/WorkPlans/LoadAsstManagerWorkplanLines",
		type: "post",
		dataType: "json",
       // contentType: false,
		//processData: false,
		data: {Department:Department},
		cache: false,
		success: function (results) {
			var rows = "";
			$.each(results, function (i, result) {
				rows += "<tr>";
    rows += "<td>" + result.PerformanceObjective + "</td>";
    rows += "<td>" + result.Project + "</td>";
    rows += "<td>" + result.PerformanceOutcome + "</td>";
    rows += "<td>" + result.DepartmentalObjective + "</td>";
    rows += "<td>" + result.PMI + "</td>";
    rows += "<td>" + result.Activity + "</td>";
    rows += "<td>" + result.WeightTotal + "</td>";
    rows += "<td>" + result.CompletionDate + "</td>";
    rows += "<td>" + result.Perspective + "</td>";
    //rows += "<td>" + result.Designation + "</td>";

    rows += '<td><a href="#" onclick="return EditAsstManagerLine(\'' + result.Code + '\');"><i class="fa fa-pencil" style="color:blue" aria-hidden="true"><strong>Edit</strong></i></a> |<a href="#" onclick="return DeleteAsstManagerLine(\'' + result.Code + '\');"><i class="fa fa-trash" style="color:red" aria-hidden="true"><strong>Remove</strong></i></a></td>';
    rows += "</tr>";
	});
		$("#ApplicationDocumentsTbl tbody").html(rows);
		$("#AjaxLoader").css("display", "none");
		$("#ApplicationDocumentsTbl").css("display", "block");

	},
		error: function (xhr, status, error) {
		}
	});
}



//Create Asst Managers Workplan Header
   function CreateAsstManagersHeader() {

    var Designation = $("#Designation").val();
    var UserId = $("#UserId").val();
    var Department=$("#DepartmentItem").val();
    var Directorate=$("#DirectorateItem").val();

	var frmData = new FormData();

	frmData.append("Designation",Designation);
	frmData.append("UserId",UserId);
    frmData.append("Department",Department);
	frmData.append("Directorate",Directorate);

	//Block UI
	$.blockUI();
	$.ajax({
		url: "/WorkPlans/CreateAsstManagersWPHeader",
		type: "POST",
		data: frmData,
		dataType: 'json',
		contentType: false,
		processData: false,
		enctype: "multipart/form-data",
		cache: false,
		success: function (result) {
			$('#txtMessage').html(result.message);
			if (result.message=="youexist") {
                alert("You have already Loaded Managers' Workplan Lines")
                LoadAsstManagersWorkplanLines();
            }
            else if (result.message=="someoneexists") {
                alert("Failed, this Process has already been Initiated by another Assistant Manager");
                LoadAsstManagersWorkplanLines();
            }
            else if(result.message=="succeeded") {
             alert("Managers' Workplan Lines Loaded Successfully");
              LoadAsstManagersWorkplanLines();
            }
            else if(result.message=="managernill") {
             alert("Failed, Managers' workplan Lines have not yet been filled. Please contact your department for assistance");
             LoadAsstManagersWorkplanLines();
            }
            else{
            alert("Failed, Please try again later");
            }
			$.unblockUI();
			Ladda.stopAll();
		},
		error: function (err) {
			Ladda.stopAll();
		}
	});
}



    //Delete Asst Manager WorkPlan Line
    function DeleteAsstManagerLine(Code) {
        var ans = confirm("Are you sure you want to remove this record ?");
        if (ans) {
            $.ajax({
                url: "/WorkPlans/DeleteAsstManagerWorkPlanLine",
                type: "POST",
                dataType: "json",
                data: { Code: Code },
                cache: false,
                success: function (result) {
                    alert("Successfully Deleted");
                    LoadAsstManagersWorkplanLines();
                },
                error: function (errormessage) {
                    alert("An Error occurred, Please try again later");
                }
            });
        }
    }

    //Edit Asst Manager Line
    function EditAsstManagerLine(Code) {

        $.ajax({
            url: "/WorkPlans/GetAsstManagerLineForEdit",
            type: "post",
            dataType: "json",
            data: { Code: Code },
            cache: false,
            success: function (result) {
                $("#DesignationItem").val(result.Designation);
                $("#DirectorateItem").val(result.Directorate);
                $("#DepartmentItem").val(result.Department);
                $("#PerspectiveItem").val(result.Perspective);
                $("#PerformanceObjectiveCodeItem").val(result.No);
                $("#DepartmentalObjectiveItem").val(result.DepartmentalObjective);
                $("#ProjectItem").val(result.Project);
                $("#ActivityItem").val(result.Activity);
                $("#PMIItem").val(result.PMI);
                $("#POItem").val(result.PerformanceOutcome);
                $("#CompletionDateItem").val(result.CompletionDate, 'dd/mm/yyyy');
                $("#WeightTotalItem").val(result.WeightTotal);
                $("#UserCode").val(result.Code);
                $("#HeaderNo").val(result.HeaderNo);

                $('#errorMessage').hide();
                $("#ApplicationDocumentModal").modal("show");
                $("#UploadBtn").hide();
                $("#ModifyBtn").show();
            },
            error: function (xhr, status, error) {

            }
        });
        return false;
    }

