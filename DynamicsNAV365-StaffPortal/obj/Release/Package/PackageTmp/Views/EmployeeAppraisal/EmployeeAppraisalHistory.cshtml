@model IList<DynamicsNAV365_StaffPortal.Models.EmployeeAppraisal.EmployeeAppraisalHeaderModel>

@{
    ViewBag.Title = "Employee Individual-PC History";
}
<div class="wrapper row-offcanvas row-offcanvas-left">
    <!--Render procurement sidebar-->
    @{Html.RenderAction("_HumanResourceSidebar", "HumanResourceHome");}
    <aside class="right-side">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header" data-background-color="company_card">

                            <div class="row">
                                <div class="col-md-4">
                                    <h4 class="title"><i>Individual PC-Targets</i></h4>
                                </div>
                                <div class="col-md-8">
                                    <a class="btn btn-white btn-xs pull-right" href="@Url.Action("NewEmployeeAppraisal", "EmployeeAppraisal")" data-background-color="login_card">
                                        <strong style="color:white">
                                            <i class="fa fa-plus"></i>
                                            Create New Individual-Target
                                        </strong>
                                    </a>
                                </div>
                            </div>

                        </div>
                        <div class="card-content">
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="TableContainer" class="table-responsive">
                                        <table id="EmployeeAppraisalTbl" class="stripe">
                                            <thead class="text-primary">
                                                <tr>
                                                    <th>No.</th>
                                                    <th>Employee_No.</th>
                                                    <th>Employee_Name</th>
                                                    <th>Appraisal_Period</th>
                                                    <th>Description</th>
                                                    <th>Status</th>
                                                    <th>&nbsp;</th>
                                                    <th>&nbsp;</th>
                                                    <th>&nbsp;</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    string editUrl = "";
                                                    string viewUrl = "";
                                                    string approverUrl = "";
                                                    for (int i = 0; i < Model.Count; i++)
                                                    {
                                                        editUrl = Url.Action("OnBeforeEdit", "EmployeeAppraisal") + "?DocumentNo=" + Model[i].DocumentNo;
                                                        viewUrl = Url.Action("ViewEmployeeAppraisal", "EmployeeAppraisal") + "?DocumentNo=" + Model[i].DocumentNo;
                                                        approverUrl = Url.Action("Approvals", "Approval") + "?DocumentNo=" + Model[i].DocumentNo;
                                                        <tr>
                                                            <td>@Model[i].DocumentNo</td>
                                                            <td>@Model[i].EmployeeNo</td>
                                                            <td>@Model[i].EmployeeName</td>
                                                            <td>@Model[i].CalendarPeriod</td>
                                                            <td>@Model[i].Description</td>
                                                            <td>@Model[i].Status</td>
                                                            <td>
                                                                @if (@Model[i].Status == "Open")
                                                                {
                                                                    <a href="@editUrl" class=""><b>Edit</b></a>}
                                                            </td>
                                                            <td>
                                                                <a href="@viewUrl" class=""><b>View</b></a>
                                                            </td>
                                                            <td>
                                                                <a href="@approverUrl" style="color:red" class="fa fa-check"><b>Approver(s)</b></a>
                                                            </td>
                                                        </tr>

                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </aside>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //Add CSS Classes
        	$("#EmployeeAppraisalTbl").dataTable({
                "order": [[0, "No"]],
                "columnDefs": [ {
                    "targets": [1,2,3,4,5,6,7],
                    "orderable": false,
                }],

                "fixedColumns": true
            });
        });
    </script>
}