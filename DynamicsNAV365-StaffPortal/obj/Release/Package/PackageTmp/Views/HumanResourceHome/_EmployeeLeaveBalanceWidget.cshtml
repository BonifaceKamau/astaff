@model IList<DynamicsNAV365_StaffPortal.Models.HumanResource.HumanResourceHome.EmployeeLeaveBalanceModel>

<div class="panel panel-info">
	<div class="panel-heading">
		<i class="fa fa-bed fa-fw"></i>Leave Balances
	</div>
	<div class="panel-body">
		<table id="LeaveBalances" class="table table-striped table-responsive">
			<thead>
				<tr>
					<th>Leave Type</th>
					<th align="right">Balance(Days)</th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < Model.Count; i++)
				{
					<tr>
						<td>@Model[i].LeaveType</td>
						<td>@Model[i].LeaveBalanceStr</td>
					</tr>
				}
			</tbody>
			<tfoot>

			</tfoot>
		</table>
	</div>
</div>



