
@model DynamicsNAV365_StaffPortal.Models.StaffRequisition.ProfessionalBodies
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <i class="fa fa-institution fa-fw"></i> 3). Membership/Professional Bodies
            </div>
            <button class="btn btn-primary btn-xs" type="button" data-toggle="modal" data-target="#JobProfessionalBodiesModal" onclick="ClearJobProfessionalBodiesModal();">
                <i class="fa fa-plus"></i>
                Add Professional Body
            </button><br />
            <table id="ProfessionalBodiesTbl" class="table table-striped table-responsive table-condensed">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
        <div id="JobProfessionalBodiesModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="JobProfessionalBodiesModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="btn close" type="button" data-dismiss="modal"><i class="fa fa-close"></i></button>
                        <h4 id="JobProfessionalBodiesModalLabel" class="modal-title">Membership/Professional Body</h4>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "JobAcademicRequirementsForm", @class = "" }))
                        {
                            @Html.AntiForgeryToken()

                            if (Model != null && Model.LineErrorStatus == true)
                            {
                                <div class="col-md-12">
                                    <div id="errorMessage" class="alert alert-danger" role="alert">
                                    </div>
                                </div>
                            }

                            @Html.HiddenFor(model => model.LineNo)
                            @Html.HiddenFor(model => model.DocumentNo)

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Description3, htmlAttributes: new { @id = "Description3Lbl", @class = "control-label" })
                                        @Html.EditorFor(model => model.Description3, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Description3, "", new { @id = "Description3Error", @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button id="CreateJobProfessionalBtn" class="btn btn-xs btn-primary" type="button" onclick="CreateJobProfessionalBody()();"><i class="fa fa-plus"></i>Save</button>
                        <button id="ModifyJobProfessionalBtn" class="btn btn-xs btn-primary" type="button" onclick="ModifyCreateJobProfessionalBody()();"><i class="fa fa-adjust"></i>Update</button>
                        <button class="btn btn-xs btn-danger" type="button" data-dismiss="modal"><i class="fa fa-close"></i>Cancel</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>





