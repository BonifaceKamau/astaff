@model DynamicsNAV365_StaffPortal.Models.StaffRequisition.OtherRequirements
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <i class="fa fa-sticky-note-o fa-fw"></i> 6). Other Relevant Requirement
            </div>
            <button class="btn btn-primary btn-xs" type="button" data-toggle="modal" data-target="#OtherRequirementsModal" onclick="ClearOtherRequirementsModal();">
                <i class="fa fa-plus"></i>
                Add Other Relevant Requirements
            </button><br />
            <table id="OtherRequirementsTbl" class="table table-striped table-responsive table-condensed">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
        <div id="OtherRequirementsModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="OtherRequirementsModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="btn close" type="button" data-dismiss="modal"><i class="fa fa-close"></i></button>
                        <h4 id="OtherRequirementsModalLabel" class="modal-title">Other Relevant Requirement(s)</h4>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "OtherRequirementsForm", @class = "" }))
                        {
                            @Html.AntiForgeryToken()

                            if (Model != null && Model.LineErrorStatus == true)
                            {
                                <div class="col-md-12">
                                    <div id="errorMessage" class="alert alert-danger" role="alert">
                                    </div>
                                </div>
                            }

                            @Html.HiddenFor(model => model.LineNo)
                            @Html.HiddenFor(model => model.DocumentNo)


                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Description6, htmlAttributes: new { @id = "Description6Lbl", @class = "control-label" })
                                        @Html.EditorFor(model => model.Description6, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Description6, "", new { @id = "Description6Error", @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button id="CreateOtherBtn" class="btn btn-xs btn-primary" type="button" onclick="CreateOtherRequirements();"><i class="fa fa-plus"></i>Save</button>
                        <button id="ModifyOtherBtn" class="btn btn-xs btn-primary" type="button" onclick="ModifyOtherRequirements();"><i class="fa fa-adjust"></i>Update</button>
                        <button class="btn btn-xs btn-danger" type="button" data-dismiss="modal"><i class="fa fa-close"></i>Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




