
@{
    ViewBag.Title = "AppraisalsHome";
    string midyrUrl = Url.Action("MidAppraisals", "Appraisals");
    string endyrUrl = Url.Action("EndYearAppraisal", "Appraisals");
    //midyrUrl = Html.RenderAction("_Appraisals", "Appraisals");
}

<div class="wrapper row-offcanvas row-offcanvas-left">
    <!--Render Human Resource Sidebar-->
    @{Html.RenderAction("_PerformanceManagementSidebar", "PerformanceHome");}

    @*@{Html.RenderAction("_Appraisals", "Appraisals");}*@

</div>
<div class="wrapper row-offcanvas row-offcanvas-left">
