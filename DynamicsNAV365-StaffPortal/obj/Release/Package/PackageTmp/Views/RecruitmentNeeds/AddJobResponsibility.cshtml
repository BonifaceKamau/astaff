@model OdataRef.RecruitmentNeedsKPA

<div class="bg-soft-dark" style="color:black">
    <form id="JobResponsibilityModalForm">
        <div class="row">
            @Html.HiddenFor(model => model.Job_ID)
            @Html.HiddenFor(model => model.Line_No)
            <div class="col-md-4">
                <div class="form-group label-floating">
                    @Html.LabelFor(model => model.Responsibility, htmlAttributes: new { @class = "control-label"})
                    @Html.EditorFor(model => model.Responsibility, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Responsibility, "", new { @class = "text-danger"})
                </div>
            </div>
            
        </div>
        <div class="row">

            <div align="center">
                <input type="button" class="btn btn-primary waves-effect waves-light" value="Submit" onclick="CreateOrUpdateJobResponsibilityLine();"/>
            </div>
        </div> 
    </form>
    
</div>