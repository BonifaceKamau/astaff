@model DynamicsNAV365_StaffPortal.Models.Procurement.RFX.RFXHeaderModel

@{
    ViewBag.Title = "Approve/Reject RFX";
}
<div class="wrapper row-offcanvas row-offcanvas-left">
    <!--Render Approval Sidebar-->
    @{Html.RenderAction("_ApprovalSidebar", "Approval");}
    <aside class="right-side">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        @using (Html.BeginForm("RFXApproval", "RFX", FormMethod.Post, new { @class = "" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="card-header" data-background-color="company_card">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h5 class="title"><i><strong>Approve/Reject RFX</strong></i></h5>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="col-md-3">
                                            <input type="submit" formtarget="_blank" id="submitBtn" name="Command" value="View Attachment" class="btn btn-white btn-xs pull-right ladda-button" data-style="slide-right" data-background-color="login_card" />
                                        </div>
                                        <div class="pull-right">
                                            <button type="submit" id="btnApprove" name="Command" value="Approve" class="btn btn-success btn-xs ladda-button" data-style="slide-right">
                                                <span class="ladda-label">
                                                    <i class="fa fa-check-circle"></i>
                                                    Approve
                                                </span>
                                            </button>
                                            <button type="submit" id="btnReject" name="Command" value="Reject" class="btn btn-danger btn-xs ladda-button" data-style="slide-right">
                                                <span class="ladda-label">
                                                    <i class="fa fa-close"></i>
                                                    Reject
                                                </span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                @if (Model != null && Model.ErrorStatus == true)
                                {
                                    <div class="alert alert-danger">
                                        <strong>Error! </strong>@Html.Raw(HttpUtility.HtmlDecode(Model.ErrorMessage))
                                    </div>
                                }

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.No, htmlAttributes: new { @id = "NoLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.No, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                            @Html.ValidationMessageFor(model => model.No, "", new { @id = "NoError", @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @id = "TitleLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                            @Html.ValidationMessageFor(model => model.Title, "", new { @id = "TitleError", @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.RequisitionNo, htmlAttributes: new { @id = "RequisitionNoLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.RequisitionNo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.RequisitionNo, "", new { @id = "RequisitionNoError", @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.ProcurementPlanNo, htmlAttributes: new { @id = "ProcurementPlanNoLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.ProcurementPlanNo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.ProcurementPlanNo, "", new { @id = "ProcurementPlanNoError", @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.SupplierCategory, htmlAttributes: new { @id = "SupplierCategoryLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.SupplierCategory, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.SupplierCategory, "", new { @id = "SupplierCategoryError", @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.SupplierCategoryDescription, htmlAttributes: new { @id = "SupplierCategoryDescriptionLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.SupplierCategoryDescription, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.SupplierCategoryDescription, "", new { @id = "SupplierCategoryDescriptionError", @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.ProcurementMethod, htmlAttributes: new { @id = "ProcurementMethodLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.ProcurementMethod, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.ProcurementMethod, "", new { @id = "ProcurementMethodError", @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.EvaluateBasedOn, htmlAttributes: new { @id = "EvaluateBasedOnLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.EvaluateBasedOn, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.EvaluateBasedOn, "", new { @id = "EvaluateBasedOnError", @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.EligibilityDescription, htmlAttributes: new { @id = "EligibilityDescriptionLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.EligibilityDescription, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.EligibilityDescription, "", new { @id = "EligibilityDescriptionError", @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.AdvertStartDate, htmlAttributes: new { @id = "AdvertStartDateLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.AdvertStartDate, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.AdvertStartDate, "", new { @id = "AdvertStartDateError", @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.ClosingDateTime, htmlAttributes: new { @id = "ClosingDateTimeLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.ClosingDateTime, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.ClosingDateTime, "", new { @id = "ClosingDateTimeError", @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.TenderOpeningDate, htmlAttributes: new { @id = "TenderOpeningDateLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.TenderOpeningDate, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.TenderOpeningDate, "", new { @id = "TenderOpeningDateError", @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Comments, htmlAttributes: new { @id = "CommentsLbl", @class = "control-label" })
                                            @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Comments, "", new { @id = "CommentsError", @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-12">
                                    @{Html.RenderAction("_ViewRFXLine", "RFX", new { RFXNo = Model.No });}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <a class="btn btn-xs btn-dark pull-right" href="@Url.Action("OpenEntries", "Approval")" style="background-color:black">
                                        <i class="fa fa-close"></i>
                                        Close
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </aside>
</div>
@section scripts{
    <script src="~/Scripts/Procurement/RFXScripts/RFXScript.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            LoadRFXLines($("#No").val());
        });
    </script>
}